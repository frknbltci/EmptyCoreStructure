@model CategoryListViewModel;

@{
    ViewBag.Title = "Index";
   
}

<h2>Index</h2>

<div class="list-group">
    <a href="/product/index" class="list-group-item">Tümünü Gör</a>
    @foreach (var category in Model.Categories)
    {
        var css = "list-group-item";

        if (Model.CurrentCategoryId==category.CategoryId)
        {
            css += " active";
        }

        <a href="/product/index?CategoryId=@category.CategoryId " class="@css">
            @category.CategoryName

        </a>
    }
</div>


